@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- <meta name="viewport" content="width=device-width, initial-scale=1">-->
    <title>_Layout</title>

    <!-- CRYPTO JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.9-1/crypto-js.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.0.0/aes.min.js"></script>

    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <!-- SCRIPTS -->
    <script type="text/javascript" src="~/js/_layout.js"></script>
    <script type="text/javascript" src="~/js/validation.js"></script>
    <script type="text/javascript" src="~/js/shop.js"></script>

    <!-- STYLES -->
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/specifics.css" />
</head>

<body onload="getTodayDate()">

    <!-- HEADER -->
    <header>
        <div class="nav__container container-fluid">
            <!-- TOP HEADER -->
            <div class="row nav__top">
                <div class="nav__top-left col-xl-3 col-lg-4 col-md-12 col-sm-12 col-xs-12">
                    <img class="icon-sm clickable" src="~/images/facebook_icon.png" />
                    <img class="icon-sm clickable" src="~/images/twitter_icon.png" />
                    <img class="icon-sm clickable" src="~/images/tumblr_icon.png" />
                    <img class="icon-sm clickable" src="~/images/linkedin_icon.png" />
                </div>

                <div class="col-xl-6 col-lg-4 col-md-12 col-sm-12 col-xs-12">
                    <hr />
                </div>

                <div class="nav__top-right col-xl-3 col-lg-4 col-md-12 col-sm-12 col-xs-12">
                    <img class="icon-sm" src="~/images/language_icon.png" />
                    @{await Html.RenderPartialAsync("_Culture");}
                </div>
            </div>
            <!-- END TOP HEADER -->
            <!-- BOTTOM HEADER -->
            <div class="row nav__bottom">
                <div class="nav__bottom-left col-xl-3 col-lg-4 col-md-12 col-sm-12 col-xs-12">
                    <img class="nav__logo clickable" src="~/images/logo_01.png" onclick="@("window.location.href='" + @Url.Action("", "Home") + "'")" />
                </div>

                <div class="nav__bottom-middle col-xl-6 col-lg-4 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn-dark nav__button" onclick="@("window.location.href='" + @Url.Action("", "Home") + "'")">@localizer["Home"]</button>
                    <button class="btn-dark nav__button" onclick="@("window.location.href='" + @Url.Action("Shop", "Shop") + "'")">@localizer["Shop"]</button>
                    <button class="btn-dark nav__button" onclick="@("window.location.href='" + @Url.Action("Subscribe", "Shop") + "'")">@localizer["Subscribe"]</button>
                </div>

                <div class="nav__bottom-right col-xl-3 col-lg-4 col-md-12 col-sm-12 col-xs-12">
                    <button class="btn-icon-light" onclick="@("window.location.href='" + @Url.Action("", "Account") + "'")">
                        <img class="icon-lg" src="~/images/account_icon.png" />
                        <span>@localizer["Account"]</span>
                    </button>

                    <button class="btn-icon-light" onclick="@("window.location.href='" + @Url.Action("Wishlist", "Shop") + "'");">
                        <img class="icon-lg" src="~/images/wishlist_icon.png" />
                        <span>@localizer["Wishlist"]</span>
                    </button>

                    <button class="btn-icon-light" onclick="@("window.location.href='" + @Url.Action("Cart", "Shop") + "'");">
                        <img class="icon-lg" src="~/images/cart_icon.png" />
                        <span>@localizer["Cart"]</span>
                    </button>
                </div>
            </div>
            <!-- END BOTTOM HEADER -->
        </div>
    </header>
    <!-- END HEADER -->
    <!-- BODY -->
    @RenderBody()
    <!-- END BODY -->
    <!-- FOOTER -->
    <footer>
        <div class="container-fluid">
            <!-- TOP FOOTER-->
            <div class="row footer__top">
                <div class="footer__top-left col-xl-3 col-lg-3 col-md-6 col-sm-12 col-xs-12">
                    <h4>@localizer["Company"]</h4>
                    <hr />
                    <ul class="footer__list">
                        <li class="clickable-txt font-sm">@localizer["Contact us"]</li>
                        <li class="clickable-txt font-sm">@localizer["About"]</li>
                        <li class="clickable-txt font-sm">@localizer["Terms of service"]</li>
                        <li class="clickable-txt font-sm">@localizer["Privacy policy"]</li>
                    </ul>
                </div>

                <div class="footer__top-middle-left col-xl-3 col-lg-3 col-md-6 col-sm-12 col-xs-12">
                    <h4>@localizer["Links"]</h4>
                    <hr />
                    <ul class="footer__list">
                        <li class="clickable-txt font-sm">@localizer["Home"]</li>
                        <li class="clickable-txt font-sm">@localizer["Shop"]</li>
                        <li class="clickable-txt font-sm">@localizer["Subscribe"]</li>
                        <li class="clickable-txt font-sm">@localizer["Login"]</li>
                        <li class="clickable-txt font-sm">@localizer["Register"]</li>
                        <li class="clickable-txt font-sm">@localizer["Account"]</li>
                        <li class="clickable-txt font-sm">@localizer["Wishlist"]</li>
                        <li class="clickable-txt font-sm">@localizer["Cart"]</li>
                    </ul>
                </div>

                <div class="footer__top-middle-right col-xl-3 col-lg-3 col-md-6 col-sm-12 col-xs-12">
                    <h4>@localizer["Categories"]</h4>
                    <hr />
                    <ul class="footer__list">
                        <li class="clickable-txt font-sm">Cat01</li>
                        <li class="clickable-txt font-sm">Cat02</li>
                        <li class="clickable-txt font-sm">Cat03</li>
                        <li class="clickable-txt font-sm">Cat04</li>
                        <li class="clickable-txt font-sm">Cat05</li>
                        <li class="clickable-txt font-sm">Cat06</li>
                        <li class="clickable-txt font-sm">Cat07</li>
                        <li class="clickable-txt font-sm">Cat08</li>
                    </ul>
                </div>

                <div class="footer__top-right col-xl-3 col-lg-3 col-md-6 col-sm-12 col-xs-12">
                    <h4>@localizer["Stay connected"]</h4>
                    <hr />
                    <div class="footer__top-right-content">
                        <form class="footer__email-form">
                            <span class="font-md">@localizer["Email-Registration"]</span>
                            <input class="txt-input footer__email-input" type="email" placeholder="@localizer["Email"]" />
                            <button class="btn-light footer__email-button" data-lang="submit">@localizer["Submit"]</button>
                        </form>
                        <img class="icon-md" src="~/images/facebook_icon.png" />
                        <img class="icon-md" src="~/images/twitter_icon.png" />
                        <img class="icon-md" src="~/images/tumblr_icon.png" />
                        <img class="icon-md" src="~/images/linkedin_icon.png" />
                    </div>
                </div>
            </div>
            <!-- END TOP FOOTER -->
            <!-- BOTTOM FOOTER -->
            <div class="row">
                <div class="col-12">
                    <hr />
                </div>
            </div>

            <div class="row">
                <div class="footer__bottom-left col-xl-6 col-lg-6 col-md-12 col-sm-12 col-xs-12">
                    <b class="font-sm">@localizer["Copyright"]</b>
                </div>

                <div class="footer__bottom-right col-xl-6 col-lg-6 col-md-12 col-sm-12 col-xs-12">
                    <b class="font-sm">Jonathan Genier | </b>
                    <b class="font-sm" id="date"></b>
                </div>
            </div>
            <!-- END BOTTOM FOOTER -->
        </div>
    </footer>
    <!-- END FOOTER-->

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
